<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/solidWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/solidWhite</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/solidDark</item>
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>

    <style name="ExternalAccountLogin" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/solidDark</item>
        <item name="android:elevation">1dp</item>
        <item name="android:strokeColor">@color/lightDark</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="HomeTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>